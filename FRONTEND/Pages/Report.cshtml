@page "{handler?}"
@model FrontEnd.Pages.ReportModel
@{
}
@Html.AntiForgeryToken()
<div class="row">
    <div class="row mb-3 pb-1">
        <div class="col-12">
            <div class="d-flex align-items-lg-center flex-lg-row flex-column">
                <div class="flex-grow-1">
                </div>
                <div class="mt-3 mt-lg-0">
                    <div class="row g-3 mb-0 align-items-center">
                        <div class="col-sm-auto">
                            <div id="apply-value"></div>
                        </div>
                        <div class="col-sm-auto">
                            <div id="selectStatus"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card ribbon-box">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Transaction List</h5>
            </div>
            <div class="card-body">
                <div id="roleGrid"></div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        var $users = @Html.Raw(Json.Serialize(Model.AllDdl?.UserList)), $masters = @Html.Raw(Json.Serialize(Model.AllDdl?.MasterList));
    </script>
    <script src="~/js/reportall-page.js"></script>
}
